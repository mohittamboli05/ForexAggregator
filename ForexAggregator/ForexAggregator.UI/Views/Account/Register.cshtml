@model ForexAggregator.UI.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<form class="form-horizontal" method="post" asp-action="Register">
    <div class="form-group">
        <label class="control-label col-sm-2" for="email">Email:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control border-left-0", @placeholder = "Enter email" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="firstname">First Name:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control border-left-0", @placeholder = "Enter First Name" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="lastname">Last Name:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control border-left-0", @placeholder = "Enter Last Name" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="lastname">Mobile:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control border-left-0", @placeholder = "Enter Mobile" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Password:</label>
        <div class="col-sm-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control border-left-0", @placeholder = "Enter Password" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Confirm Password:</label>
        <div class="col-sm-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control border-left-0", @placeholder = "Confirm Password" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>
@model ForexAggregator.Web.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="container">
    <div class="row">

        <div style="width: 50%; margin: 15px auto;">
            <h1 style="text-align: center; margin-bottom: 25px">User Register</h1>
            <form class="form-horizontal" method="post" asp-action="Register">
                <div class="form-group">
                    <label class="control-label col-sm-10" for="firstname">First Name:</label>
                    <div class="col-sm-20">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control border-left", @placeholder = "Enter First Name" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-10" for="lastname">Last Name:</label>
                    <div class="col-sm-20">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control border-left", @placeholder = "Enter Last Name" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-10" for="Mobile">Mobile No.:</label>
                    <div class="col-sm-20">
                        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control border-left", @placeholder = "Enter Mobile No." })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-10" for="email">Email:</label>
                    <div class="col-sm-20">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control border-left", @placeholder = "Enter email" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-10" for="pwd">Password:</label>
                    <div class="col-sm-20">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control border-left", @placeholder = "Enter Password" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-10" for="pwd">Confirm Password:</label>
                    <div class="col-sm-20">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control border-left", @placeholder = "Confirm Password" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

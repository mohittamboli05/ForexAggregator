@model ForexAggregator.Web.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6 text-center">
            <h2>User Login</h2>
            <hr />
            <form class="form-horizontal" method="post" asp-action="Login">
                <div class="form-group">
                    <label class="control-label float-left" for="email">Email:</label>
                    <div class="">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control border-left", @placeholder = "Enter email" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label float-left" for="pwd">Password:</label>
                    <div class="">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control border-left", @placeholder = "Enter password" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 ">
                        <button type="submit" class="float-right btn btn-primary">Login</button>
                        <a href="/Account/Register" class="float-left btn btn-primary">Signup</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-3"></div>
    </div>
</div>